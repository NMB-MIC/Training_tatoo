FROM python:3.11-slim

WORKDIR /app

# ติดตั้ง dependencies ขั้นพื้นฐาน
RUN apt-get update && \
    apt-get install -y curl gnupg2 unixodbc-dev libodbc1

# ดาวน์โหลด public key Microsoft แบบใหม่และเพิ่มเข้า trusted.gpg.d
RUN curl -sSL https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > /etc/apt/trusted.gpg.d/microsoft.gpg

# เพิ่ม repo Microsoft Debian 12
RUN echo "deb [arch=amd64] https://packages.microsoft.com/debian/12/prod bookworm main" > /etc/apt/sources.list.d/mssql-release.list

# ติดตั้ง ODBC driver
RUN apt-get update && \
    ACCEPT_EULA=Y apt-get install -y msodbcsql18

# ล้าง cache
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy และติดตั้ง Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Run
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
